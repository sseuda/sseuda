<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sseuda.sseuda_server.function.categorySmall.dao.CategorySmallMapper">

    <resultMap id="categortSmallResultMap" type="com.sseuda.sseuda_server.function.categorySmall.dto.CategorySmallDTO">
        <id property="smallCategoryId" column="small_category_id"/>
        <result property="smallCategoryName" column="small_category_name"/>
        <result property="bigCategoryId" column="big_category_id"/>
    </resultMap>

<!--    소분류 카테고리 전체 조회 -->
    <select id="findCategorySmallList" resultMap="categortSmallResultMap">
        SELECT
            small_category_name
        FROM
            tbl_category_small
    </select>

<!--    소분류 카테고리 삭제 -->
    <delete id="deleteCategorySmallCode" parameterType="com.sseuda.sseuda_server.function.categorySmall.dto.CategorySmallDTO">
        DELETE
        FROM
            tbl_category_small
        WHERE
            small_category_id = #{ smallCode }
    </delete>
</mapper>